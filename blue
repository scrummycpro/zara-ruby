-- Ensure your custom texture is in the textures directory
-- This script assumes the texture is named "beach.png" and placed in the correct folder

-- Override the White Baked Clay node definition
minetest.override_item("bakedclay:white", {
    tiles = {"beach.png"},  -- Updated to use the custom texture
    description = "White Baked Clay with Custom Texture",
})

-- Register new baked clay with custom texture if needed
minetest.register_node("bakedclay:white_custom", {
    description = "White Baked Clay with Custom Texture",
    tiles = {"beach.png"},
    groups = {cracky = 3},
    sounds = default.node_sound_stone_defaults(),
})

